<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AllplanBimplusDemo.UserControls">

    <LinearGradientBrush x:Key="HorizontalSplitBrush"  StartPoint="0,1" EndPoint="0,0">
        <GradientStop Color="DarkGray" Offset="0" />
        <GradientStop Color="White" Offset="0.30" />
        <GradientStop Color="White" Offset="0.70" />
        <GradientStop Color="DarkGray" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="VerticalSplitBrush"  StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="DarkGray" Offset="0" />
        <GradientStop Color="White" Offset="0.30" />
        <GradientStop Color="White" Offset="0.70" />
        <GradientStop Color="DarkGray" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>